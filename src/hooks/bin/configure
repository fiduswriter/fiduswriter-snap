#!/usr/bin/env python3
import os
import sys
import shutil
from subprocess import call, check_output, CalledProcessError

SNAP = os.environ.get('SNAP')
SNAP_DATA = os.environ.get('SNAP_DATA')
CONFIGURE_PATH = '{}/configuration.py'.format(SNAP_DATA)
# Fix: due to https://bugs.launchpad.net/snapcraft/+bug/1824255
# we need to set the paths here.

MULTI_ARCH_PATHS = {
    'x86_64': 'x86_64-linux-gnu',
    'arm': 'arm-linux-gnueabihf',
    'aarch64': 'aarch64-linux-gnu'
}
os.environ["PATH"] = (
    '{}/usr/sbin'.format(SNAP) +
    ':{}/usr/bin'.format(SNAP) +
    ':{}/sbin'.format(SNAP) +
    ':{}/bin'.format(SNAP) +
    ':{}'.format(os.environ["PATH"])
)

LD_LIBRARY_PATH = (
    '{}'.format(os.environ.get('SNAP_LIBRARY_PATH')) +
    ':{}/lib'.format(SNAP) +
    ':{}/usr/lib'.format(SNAP)
)
arch = check_output(['arch']).strip().decode('utf-8')
if arch in MULTI_ARCH_PATHS:
    LD_LIBRARY_PATH += (
        ':{}/lib/{}'.format(SNAP, MULTI_ARCH_PATHS[arch]) +
        ':{}/usr/lib/{}'.format(SNAP, MULTI_ARCH_PATHS[arch])
    )
os.environ["LD_LIBRARY_PATH"] = LD_LIBRARY_PATH
os.environ["PYTHONPATH"] = '{}/lib/python3.6/site-packages'.format(SNAP)

# end fix

if os.path.isfile(CONFIGURE_PATH):
    try:
        check_output([
            '{}/bin/fiduswriter'.format(SNAP),
            'help',
            '--pythonpath',
            SNAP_DATA
        ])
    except CalledProcessError:
        sys.exit(1)
# Delete any old transpile dir if there is one.
if os.path.isdir('{}/.transpile'):
    shutil.rmtree('{}/.transpile'.format(SNAP_DATA))
